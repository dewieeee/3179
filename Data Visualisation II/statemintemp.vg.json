{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 250,
  "height": 200,
  "data": {
    "url": "https://raw.githubusercontent.com/dewieeee/3179/refs/heads/main/week10_homework/weatherdata.csv"
  },
  "params": [
    {
      "name": "state_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Australian Capital Territory",
          "New South Wales",
          "Northern Territory",
          "Queensland", 
          "South Australia",
          "Tasmania", 
          "Victoria", 
          "Western Australia"
        ],
        "labels": [
          "Show All",
          "Australian Capital Territory",
          "New South Wales",
          "Northern Territory",
          "Queensland", 
          "South Australia",
          "Tasmania", 
          "Victoria", 
          "Western Australia"
        ],
        "name": "State/Territory: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Year > 0"},
    {"filter": "datum.MaxTemp > 0"},
    {
    "filter": "state_selection == null || datum.State == state_selection"
    },
    {
    "calculate": "datum.MinTemp + ' Â°C'", 
    "as": "MinTempWithUnit"
    },
    {
      "window": [
        {
          "op": "mean",
          "field": "MinTemp",
          "as": "Average Minimum Temperature for the State"
        }
      ],
      "groupby": ["State"]
    },
    {
      "calculate": "datum.MinTemp - datum['Average Minimum Temperature for the State']",
      "as": "Deviation"
    }
  ],
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "timeUnit": "year",
      "title": "Year",
      "axis": {"tickCount": 10}
    },
    "y": {
      "field": "MinTemp",
      "type": "quantitative",
      "title": "Minimum Temperature",
      "axis": {"tickCount": 6},
      "scale": {"domain": [-10,20]}
    }
  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "color": {
          "field": "State",
          "type": "nominal",
          "scale": {
            "domain": [
              "Australian Capital Territory",
              "New South Wales",
              "Northern Territory",
              "Queensland", 
              "South Australia",
              "Tasmania", 
              "Victoria", 
              "Western Australia"
            ],
            "range": [
              "#1b9e77",
              "#d95f02",
              "#7570b3",
              "#e7298a",
              "#66a61e",
              "#e6ab02",
              "#a6761d",
              "#666666"
            ]
          }
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "State", "type": "nominal"},
          {"field": "Year", "type": "temporal", "timeUnit": "year", "title": "Year"},
          {"field": "MinTemp", "type": "quantitative", "title": "Minimum Temperature"},
          {"field": "Average Minimum Temperature for the State", "type": "quantitative", "format": ".1f"},
          {"field": "Deviation", "type": "quantitative", "title": "Deviation from Average", "format": ".1f"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "dy": 4,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "MinTempWithUnit", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['MinTemp'] == -7.9|| datum['MinTemp'] == 17.4 || datum['MinTemp'] == 12.7|| datum['MinTemp'] == -0.4",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "State", "type": "nominal"},
          {"field": "Year", "type": "temporal", "timeUnit": "year", "title": "Year"},
          {"field": "MinTemp", "type": "quantitative", "title": "Minimum Temperature"},
          {"field": "Average Minimum Temperature for the State", "type": "quantitative", "format": ".1f"},
          {"field": "Deviation", "type": "quantitative", "title": "Deviation from Average", "format": ".1f"}
        ]
      }
    }
  ]
}